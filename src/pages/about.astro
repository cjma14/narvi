---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import { SITE } from "@data/constants";

interface specialization {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const specializations: specialization[] = [
{
    isRightSection: false,
    title: "Investigación en Psicometría",
    subTitle: "Este departamento se dedica al estudio y análisis de las teorías, métodos y técnicas utilizadas en la medición cognitiva, con el fin de desarrollar y mejorar la precisión y validez de los instrumentos de evaluación.",
    img: "/img/psicology-3.png",
    imgAlt: "Analista realizando investigación psicometrica",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Desarrollo de Test Psicométricos",
    subTitle:
      "Aquí se lleva a cabo el diseño, construcción y validación de pruebas psicométricas destinadas a medir diferentes variables cognitivas, como habilidades cognitivas y aptitudes académicas.",
    single: false,
    imgOne: "/img/psicology-4.png",
    imgOneAlt: "Niño realizando test psicométrico",
    imgTwo: "/img/psicology-5.png",
    imgTwoAlt: "Niña realizando test psicométrico",
  },
  {
    isRightSection: false,
    title: "Formación en Evaluación Estandarizada",
    subTitle:
      "Este departamento se encarga de proporcionar capacitación especializada en el uso y aplicación de instrumentos de evaluación estandarizada, tanto para profesionales del ámbito cognitivo como para educadores y otros profesionales interesados en la medición objetiva de habilidades y aptitudes.",
    img: "/img/psicology-7.png",
    imgAlt:
      "Joven adolecente realizando evaluación estandarizada",
  },
  {
    isRightSection: true,
    title: "Editorial",
    subTitle:
      "El área editorial se dedica a la difusión del conocimiento científico en el campo de la psicometría, mediante la publicación de libros, revistas y otros materiales académicos que contribuyan al avance y desarrollo de esta disciplina.",
    single: true,
    imgOne: "/img/psicology-8.png",
    imgOneAlt: "In progress building structure",
  },
];

const pageTitle: string = `Sobre nosotros | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://narvi-ec.com/about",
    "url": "https://narvi-ec.com/about",
    "name": "Sobre nosotros | Narvi EC",
    "description": "CEPA se erige como una institución precursora en investigación científica en el campo de la Psicometría en Chile.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://narvi-ec.com",
        "name": "Narvi Enterprise Corporation",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "es-CL"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Institución precursora en Psicometría de chile"
    subTitle="El Centro de Estudios Psicométricos y del Aprendizaje (CEPA), fundado en mayo de 2023, lidera la investigación en psicometría en Chile. Con un enfoque humano y científico, promovemos el uso responsable de las evaluaciones cognitivas para mejorar la calidad de vida de las personas."
    btnExists={true}
    btnTitle="¡Trabajemos juntos!"
    btnURL="/contact"
    imgOne="img/psicology-1.png"
    imgOneAlt={"Blueprints and digital tablet with construction plans."}
    imgTwo="img/psicology-2.png"
    imgTwoAlt={"Person working in the office"}
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    specializations.map(specialization => {
      return specialization.isRightSection ? (
        <RightSection
          title={specialization.title}
          subTitle={specialization.subTitle}
          single={specialization.single}
          imgOne={specialization.imgOne}
          imgOneAlt={specialization.imgOneAlt}
          imgTwo={specialization.imgTwo}
          imgTwoAlt={specialization.imgTwoAlt}
          btnExists={specialization.btnExists}
          btnTitle={specialization.btnTitle}
          btnURL={specialization.btnURL}
        />
      ) : (
        <LeftSection
          title={specialization.title}
          subTitle={specialization.subTitle}
          img={specialization.img}
          imgAlt={specialization.imgAlt}
          btnExists={specialization.btnExists}
          btnTitle={specialization.btnTitle}
          btnURL={specialization.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <!-- <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  /> -->
</MainLayout>
