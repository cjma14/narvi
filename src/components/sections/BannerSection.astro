---
import Icon from '../ui/icons/Icon.astro';

const {
  imgUrl,
  imgAlt,
  icon,
  title,
  subtitle,
} = Astro.props;

interface Props {
    imgUrl: string;
    imgAlt: string;
    icon: string;
    title: string;
    subtitle: string;
}

---

<section class="relative">
    <img 
        class="object-cover w-full min-h-[20rem] max-h-[40rem] z-1"
        src={imgUrl} 
        alt={imgAlt}>
    <div class="flex gap-[5px] flex-col absolute z-2 bg-primary-500 p-8 md:px-12 md:py-10 text-white font-bold right-0 md:right-[20rem] bottom-0">
      <Icon name={icon} classCustom="h-16 w-16"/>
      <h5 class="text-4xl md:text-7xl fade-text">{title}</h5>
      <h4 class="text-md md:text-xl leading-5 fade-text">
        <Fragment set:html={subtitle} />
      </h4>
    </div>
</section>
