<script>
  import Swiper from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import { Pagination, Autoplay } from "swiper/modules";

  var swiper = new Swiper(".swiperClients", {
    modules: [Pagination, Autoplay],
    spaceBetween: 40,
    grabCursor: true,
    freeMode: true,
    speed: 11000,
    loop: true,
    slidesPerView: "auto",
    autoplay: {
      delay: 0.5,
      disableOnInteraction: false,
    },
    breakpoints: {
        // Cuando la pantalla es >= 768px
        768: {
          slidesPerView: "auto",
          spaceBetween: 30
        },
        // Cuando la pantalla es >= 1024px
        1024: {
          slidesPerView: 4,
          spaceBetween: 40
        }
    },
  });
