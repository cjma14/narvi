---
// Define props from Astro
const { title, subTitle, label } = Astro.props;

// Define TypeScript interface for props
interface Props {
  label: string;
  title: string;
  subTitle?: string;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div
    class="mx-auto mb-6 flex w-full flex-col items-center space-y-1 text-center"
  >
    <div class="flex items-center justify-center gap-3">
      <span class="flex h-[10px] w-[10px] rounded-full bg-primary-500"></span>
      <h3 class="text-pearl-100">{label}</h3>
    </div>

    <h2
      class="text-balance text-2xl font-bold leading-tight text-pearl-100 sm:text-3xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-pearl-100">{subTitle}</p>
      )
    }
  </div>

  <div
    class="flex flex-col items-center justify-center gap-y-2 py-4 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24"
  >
    <div class="swiper swiperClients">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img
            class="aspect-[4/3] w-[200px] object-contain"
            src="/img/clients/exen.png"
            alt="logo exen"
          />
        </div>

        <div class="swiper-slide">
          <img
            class="aspect-[4/3] w-[200px] object-contain"
            src="/img/clients/innergy.png"
            alt="logo innergy"
          />
        </div>

        <div class="swiper-slide">
          <img
            class="aspect-[4/3] w-[200px] object-contain"
            src="/img/clients/origem.png"
            alt="logo origem"
          />
        </div>

        <div class="swiper-slide">
          <img
            class="aspect-[4/3] w-[200px] object-contain"
            src="/img/clients/petro-alliance.png"
            alt="logo petro alliance"
          />
        </div>

        <div class="swiper-slide">
          <img
            class="aspect-[4/3] w-[200px] object-contain"
            src="/img/clients/petromex.png"
            alt="logo petromex"
          />
        </div>
      </div>
      <!-- <div class="swiper-pagination"></div> -->
    </div>
    <!-- Clients Group SVGs -->
  </div>
</section>

<style>
  .swiper-pagination {
    position: relative !important;
  }

  .swiper-slide {
    display: flex !important;
    justify-content: center;
  }
</style>

<script>
  import Swiper from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import { Pagination, Autoplay } from "swiper/modules";

  var swiper = new Swiper(".swiperClients", {
    modules: [Pagination, Autoplay],
    slidesPerView: "auto",
    spaceBetween: 20,
    breakpoints: {
      // Cuando la pantalla es >= 768px
      768: {
        slidesPerView: 1,
        spaceBetween: 30,
      },
      // Cuando la pantalla es >= 1024px
      1024: {
        slidesPerView: 5,
        spaceBetween: 40,
      },
    },
    autoplay: {
      delay: 5000,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>
