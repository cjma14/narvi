---
// Import the required modules
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
// Extract properties from Astro.props
const {
  id,
  title,
  subTitle,
  btnExists,
  btnTitle,
  btnURL,
  single,
  imgOne,
  imgOneAlt,
  imgTwo,
  imgTwoAlt,
  items,
} = Astro.props;
// Define TypeScript interface for the properties
interface Props {
  id?: string;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  imgOne?: any;
  imgOneAlt?: any;
  imgTwo?: any;
  imgTwoAlt?: any;
  items?: Array<any>;
}
---
<!-- Root section of the component -->
<section
  id={id}
  class="mx-auto max-w-[85rem] items-center gap-16 px-4 py-5 md:py-10 sm:px-6 lg:grid lg:grid-cols-2 lg:px-8 lg:py-14 2xl:max-w-full text-pearl-100"
>
  <div class="fade-left">
    <!-- Title of the section -->
    <h2
      class="mb-4 text-balance text-3xl md:text-4xl font-extrabold tracking-tight"
    >
      {title}
    </h2>
    <!-- Subtitle of the section -->
    <p
      class="mb-4 max-w-prose text-pretty font-light sm:text-lg"
    >
      {subTitle}
    </p>

    { items && (
      <div class="grid grid-cols-1 md:grid-cols-2  rounded-lg pb-5 pt-2">
        {items?.map((item, index) => (
          <div class="text-white px-6 py-[34px] font-medium border-b border-[#33524A] text-sm md:text-md flex items-center gap-4">
              <span class="">0{index + 1 }.</span> 
              <div class="font-bold">{item}</div> 
          </div>
        ))}
      </div> 
      )

    }
    <div class="mt-5">
      <!-- Conditional rendering of the Primary Call-To-Action button if 'btnExists' is true -->
      {btnExists ? <PrimaryCTA title={btnTitle} url={btnURL} /> : null}
    </div>
   
  </div>
  <!-- Conditionally render one or two images based on 'single' property -->
  {
    single ? (
      <div class="mt-8">
        <!-- Single image -->
        <img
          class="w-full rounded-lg fade-right"
          src={imgOne}
          alt={imgOneAlt}
        />
      </div>
    ) : (
      <div class="mt-8 grid grid-cols-2 gap-4">
        <!-- First image in a two-image layout -->
        <img
          class="w-full rounded-xl fade-right"
          src={imgOne}
          alt={imgOneAlt}
          draggable={"false"}
        />
        <!-- Second image in a two-image layout -->
        <img
          class="mt-4 w-full rounded-xl lg:mt-10 fade-right"
          src={imgTwo}
          alt={imgTwoAlt}
          draggable={"false"}
        />
      </div>
    )
  }
</section>
