---
// Import necessary modules and utilities
import { Image } from "astro:assets";
import Icon from "@components/ui/icons/Icon.astro";
import type { CollectionEntry } from "astro:content";

const {
  imgUrl,
  imgAlt,
  title,
  description,
  url,
  index,
  footer,
} = Astro.props;

interface Props {
  imgUrl: any;
  imgAlt: string;
  title: string;
  url: string;
  description: string;
  footer?: string;
  index?: number;
}
---

<a href={url} data-astro-prefetch class="md:col-span-2 group">
  <div
    class="rounded-xl border border-[#244840] shadow-sm sm:flex h-full"
  >
    <div
      class="relative w-full shrink-0 overflow-hidden rounded-t-xl pt-[40%] sm:max-w-60 sm:rounded-s-xl md:max-w-xs md:rounded-se-none">
      <Image
        width="50"
        height="50"
        src={imgUrl}
        alt={imgAlt}
        draggable={"false"}
        class="absolute start-0 top-0 size-full object-cover transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110"
      />
    </div>
    <div class="flex flex-wrap items-center p-4 sm:p-7 text-pearl-100">
      <div class="">
        <div class="flex h-full flex-col md:gap-4">
          <h3 class="text-lg md:text-2xl font-bold">
            {title}
          </h3>
          <p class="mt-1 md:text-xl">
            {description}
            <Icon name="openInNew" classCustom="transition duration-[200ms] group-hover:text-primary-500" />
          </p>
        </div>
      </div>
      { footer && 
        <div class="mt-5 sm:mt-auto">
          <p class="text-xs">
            {footer}
          </p>
        </div>
      }
      
      
    </div>
  </div>
</a>